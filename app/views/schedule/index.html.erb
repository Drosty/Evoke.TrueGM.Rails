<div class="bs-component">
  <ul class="nav nav-tabs">
    <li class="active">
      <a href="#league-matchups" data-toggle="tab">League</a>
    </li>
    <li>
      <a href="#nfl-matchups" data-toggle="tab">NFL</a>
    </li>
  </ul>
  <div id="myTabContent" class="tab-content">
    <div class="tab-pane fade active in" id="league-matchups">
      <p>League Matchups</p>
    </div>
    <div class="tab-pane fade in" id="nfl-matchups">
      <% view_model.nfl_matchups.each do |matchup| %>
        <p><%= matchup.away_team.full_name %> AT <%= matchup.home_team.full_name %></p>
        <p><%= matchup.game_date.to_s(:schedule_date) %> on <%= matchup.tv_station %></p>
      <% end %>
    </div>
  </div>
</div>
