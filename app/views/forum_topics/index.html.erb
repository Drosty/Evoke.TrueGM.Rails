<%- model_class = ForumTopic -%>
<div class="row">
  <div class="span9">
      <h1><%= t 'forum_topic.message' %></h1>
  </div>
  <div class="span3">
    <%= link_to t('.new', :default => t("helpers.links.new")),
            new_league_forum_topic_path(@current_league),
            :class => 'btn btn-primary' %>
  </div>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Posts</th>
    </tr>
  </thead>
  <tbody>
    <% @forum_topics.each do |forum_topic| %>
      <tr>
        <td><%= link_to forum_topic.name,
                    league_forum_topic_path(@current_league, forum_topic) %></td>

        <td><%= pluralize forum_topic.forumposts_count, 'post' %>
                 - Updated <%= distance_of_time_in_words(Time.now, forum_topic.updated_at) %> ago.</td>
      </tr>
    <% end %>
  </tbody>
</table>
