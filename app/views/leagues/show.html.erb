<%- model_class = League -%>
<div class="page-header">
  <h1><%=t '.title', :default =>  @league.name %></h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Team Name</th>
      <th>Team Salary</th>
      <th>Owner</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @league.teams.each do |team| %>
      <tr>
        <td><%= link_to team.name, league_team_path(@league, team) %></td>
        <td>$1,000,000</td>
        <td><%= team.user.presence ? team.user.email : 'no user'  %></td>
        <% if can? :edit, team %>
          <td><%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_league_team_path(@league, team), :class => 'btn' %></td>
        <% else %>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              leagues_path, :class => 'btn'  %>

  <% if can? :edit, League %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_league_path(@league), :class => 'btn' %>
  <% end %>

  <% if can? :delete, League %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                league_path(@league),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  <% end %>
</div>
