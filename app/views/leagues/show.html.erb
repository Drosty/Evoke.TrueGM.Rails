<%- model_class = League -%>
<div class="page-header">
  <h1><%=t '.title', :default =>  @league.name %></h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Team Name</th>
      <th>Team Salary</th>
      <th>Owner</th>
    </tr>
  </thead>
  <tbody>
    <% @league.teams.each do |team| %>
      <tr>
        <td><%= link_to team.name, team_path(team) %></td>
        <td>$1,000,000</td>
        <td><%= team.user.presence ? team.user_name : 'no user'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              leagues_path, :class => 'btn'  %>
</div>
