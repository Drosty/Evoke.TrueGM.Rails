<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>Wk</th>
      <th>Rec</th>
      <th>Yds</th>
      <th>TD</th>
      <th>Pts</th>
    </tr>
  </thead>
  <tbody>
    <% stats.each do |stat| %>
      <tr>
        <td><%= stat.week %></td>
        <td><%= stat.receptions%></td>
        <td><%= stat.receiving_yards %></td>
        <td><%= stat.receiving_touchdowns %></td>
        <td><%= stat.total_points @current_league %></td>
      </tr>
    <% end %>
  </tbody>
</table>
