<h1>Listing nfl_players</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Position</th>
      <th>Salary</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @nfl_players.each do |nfl_player| %>
      <tr>
	<td><%= nfl_player.first_name + ' ' + nfl_player.last_name %></td>
	<td><%= nfl_player.position %></td>
	<td><%= nfl_player.salary %></td>
        <td><%= link_to 'Show', league_nfl_player_path(@current_league, nfl_player) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @nfl_players %>
