<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>Wk</th>
      <th>Yds</th>
      <th>TD</th>
      <th>INT</th>
      <th>Pts</th>
    </tr>
  </thead>
  <tbody>
    <% stats.each do |stat| %>
      <tr>
        <td><%= stat.week %></td>
        <td><%= stat.passing_yards %></td>
        <td><%= stat.passing_touchdowns %></td>
        <td><%= stat.interceptions %></td>
        <td><%= stat.total_points @current_league %></td>
      </tr>
    <% end %>
  </tbody>
</table>
