<!doctype html>
<html ng-app="ui.bootstrap.demo">
<head>
  <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.16/angular.js"></script>
  <script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.12.0.js"></script>
  <script src="assets/carousel.js"></script>
</head>
<body>
  <div ng-controller="CarouselDemoCtrl" class="inner" style="z-index: -100;">
    <div style="height: 305px; width: 100%;">
      <%= render :partial => "devise/sessions/login", :locals => {:id => "home-login"} %>
      <carousel interval="myInterval">
        <slide ng-repeat="slide in slides" active="slide.active" style="height: 75vh;">
          <img ng-src="{{slide.image}}" style="margin:auto; max-width: none;" >
          <div class="carousel-caption">
            <p>{{slide.text}}</p>
          </div>
        </slide>
      </carousel>
    </div>
    <div class="row">
    </div>
  </div>
</body>
</html>
