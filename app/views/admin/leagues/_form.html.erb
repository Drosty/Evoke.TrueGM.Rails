<%= simple_form_for([:admin,  @admin_league], :html => { :class => 'form-horizontal' }) do |f| %>

  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :tagline %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_leagues_path, :class => 'btn' %>
  </div>
<% end %>
