<%= simple_form_for([:admin, @admin_league], :html => { :class => 'form-horizontal' }) do |f| %>

  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :tagline %>

  <%= label_tag 'number of teams' %>
  <%= number_field_tag :number_of_teams, 10, in: 4...16 %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_leagues_path, :class => 'btn' %>
  </div>
<% end %>
